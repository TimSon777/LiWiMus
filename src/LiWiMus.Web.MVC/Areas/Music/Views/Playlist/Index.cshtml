@using Microsoft.Extensions.Options
@using LiWiMus.Web.MVC.Models
@model LiWiMus.Web.MVC.Areas.Music.ViewModels.PlaylistViewModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutSidebar";
}

<input type="hidden" id="playlist-id" value="@Model.Id">
<div class="wrapper">
    <div class="top-bar">
        <i class="material-icons">
            download
        </i>

        <i id="song-lyrics-btn" class="material-icons ">
            article
        </i>
        <div class="song-lyrics">
            <div class="header">
                <i id="close-lyrics" class="material-icons">highlight_off</i>
            </div>
            <p>
                текст песни
            </p>
        </div>

        <i class="material-icons">more_horiz</i>
    </div>
    <div class="img-area">
        <img src="" alt="">
    </div>
    <div class="song-details">
        <p class="name"></p>
        <p class="artist"></p>
    </div>
    <div class="progress-area">
        <div class="progress-bar">
            <audio id="main-audio" src=""></audio>
        </div>
        <div class="song-timer">
            <span class="current-time">0:00</span>
            <span class="max-duration">0:00</span>
        </div>
    </div>
    <div class="controls">
        <div class="fav-btn" >
            <i class="material-icons favorite-button" style="font-size: 36px">favorite_border</i>
        </div>
        <i id="prev" class="material-icons">skip_previous</i>
        <div class="play-pause">
            <i class="material-icons play">play_arrow</i>
        </div>
        <i id="next" class="material-icons">skip_next</i>
        <i id="more-music" class="material-icons">queue_music</i>
    </div>
    
    <div class="music-list">
        <div class="header">
            <i id="close" class="material-icons">highlight_off</i>
        </div>
        <ul>
        </ul>
    </div>
</div>

@section Scripts
{
    <script src="~/js/player.js"></script>
}
